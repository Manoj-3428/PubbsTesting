<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AddOrRemoveBicycle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/eight_dp">

        <Button
            android:id="@+id/add_bicycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_marginHorizontal="@dimen/twenty_four_dp"
            android:background="@drawable/round_button_white"
            android:fontFamily="@font/comfortaa_regular"
            android:text="Add Bicycle"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_barcode" />

        <EditText
            android:id="@+id/tv_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/forty_eight_dp"
            android:layout_marginHorizontal="@dimen/twenty_four_dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/comfortaa_regular"
            android:paddingBottom="@dimen/twenty_four_dp"
            android:text="Enter code manually"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/instruction" />

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/three_hundred_dp"
            android:layout_marginTop="@dimen/one_hundred_dp"
            android:layout_marginHorizontal="@dimen/twenty_four_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/thirty_two_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:fontFamily="@font/comfortaa_regular"
            android:lineSpacingExtra="@dimen/four_dp"
            android:text="Place the code in the centre of the square. It will be scanned automatically"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintTop_toBottomOf="@+id/surface_view" />

        <include
            android:id="@+id/include"
            layout="@layout/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>