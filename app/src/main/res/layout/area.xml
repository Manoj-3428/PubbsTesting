<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/area_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/twenty_four_dp"
    android:paddingTop="@dimen/eight_dp">

    <ImageView
        android:id="@+id/area"
        android:layout_width="@dimen/thirty_six_dp"
        android:layout_height="@dimen/thirty_six_dp"
        android:layout_marginBottom="@dimen/twelve_dp"
        android:src="@drawable/area"
        android:layout_marginTop="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/city"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/grey_700"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/area_name"
        style="@style/AppFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Area Name"
        android:layout_marginTop="@dimen/eight_dp"

        android:textColor="@color/black"
        android:textSize="@dimen/fourteen_sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/eight_dp"
        android:src="@drawable/ic_chevron"
        android:visibility="gone"
        android:layout_marginTop="@dimen/eight_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/more_info"/>

</androidx.constraintlayout.widget.ConstraintLayout>