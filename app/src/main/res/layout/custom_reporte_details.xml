<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_dialog_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/description_header"
                    style="@style/AppFont"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:paddingStart="@dimen/sixteen_dp"
                    android:paddingTop="@dimen/sixteen_dp"
                    android:paddingBottom="@dimen/eight_dp"
                    android:text="@string/report_problem_details"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/bicycle_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/description_header"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Bicycle Id"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bicycle_id"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Report Id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_id"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Date Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />
                
                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_time"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="User Id"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />

                <TextView
                    android:id="@+id/problem_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_id"
                    android:layout_marginStart="@dimen/sixteen_dp"
                    android:layout_marginTop="@dimen/sixteen_dp"
                    android:layout_marginEnd="@dimen/sixteen_dp"
                    android:layout_marginBottom="@dimen/thirty_six_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:text="Problem Description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <ImageView
            android:id="@+id/show_map"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/thirty_dp"
            app:srcCompat="@drawable/ic_arrow_down"
            android:contentDescription="@string/drop_down"/>

        <TextView
            android:id="@+id/area_now"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:paddingTop="@dimen/eight_dp"
            android:text="back"
            android:textAlignment="center"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/fourteen_sp" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>