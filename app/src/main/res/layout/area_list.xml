<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/area_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/area"
            android:layout_width="@dimen/thirty_six_dp"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:src="@drawable/area"
            android:layout_marginStart="@dimen/twenty_four_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/city"/>
        <TextView
            android:id="@+id/area_name"
            style="@style/AppFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:layout_marginBottom="@dimen/twelve_dp"
            android:padding="@dimen/four_dp"
            android:text="Area Name"
            android:layout_marginStart="@dimen/twenty_four_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/area"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/thirty_six_dp"
            android:layout_height="@dimen/thirty_six_dp"
            android:layout_marginTop="@dimen/twenty_four_dp"
            android:src="@drawable/ic_chevron"
            android:layout_marginEnd="@dimen/twenty_four_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/more_info"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>