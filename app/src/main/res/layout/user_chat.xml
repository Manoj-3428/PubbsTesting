<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UserChatActivity"

    >

    <include layout="@layout/main_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="0dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/iv_bike"
                    android:layout_width="40dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_message"
                    android:contentDescription="@string/letter_icon"/>

                <TextView
                    android:id="@+id/tv_lock_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/iv_bike"
                    android:fontFamily="@font/comfortaa_regular"
                    android:gravity="center_vertical"
                    android:text="user Id"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/battery_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_lock_id"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/iv_bike"
                    android:fontFamily="@font/comfortaa_regular"
                    android:gravity="center_vertical"
                    android:text="to me"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tv_lock_id"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:gravity="center_vertical"
                    android:text="reply"
                    android:textAllCaps="true"
                    android:textColor="@color/cyan_400"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/iv_bike"
                    android:layout_marginTop="5dp"
                    android:background="@color/grey_700" />

            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="Reply to:"
                            android:textColor="@color/black"
                            android:textSize="14sp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="Bicycle Location"
                            android:textColor="@color/cyan_400"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="Date and Time:"
                            android:textColor="@color/black"
                            android:textSize="14sp"

                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/comfortaa_regular"
                            android:text="Bicycle Location"
                            android:textColor="@color/cyan_400"
                            android:textSize="14sp" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rectangle_bg"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="start"
                android:hint="USER MESSAGE"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="14sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/rectangle_bg"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="start"
                android:hint="REPLY MESSAGE"
                android:padding="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey_700"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>