                <TextView
                    android:id="@+id/carry_forward_tv"
                    style="@style/AppFont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:padding="@dimen/four_dp"
                    android:text="@string/carry_forward"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description" />
                <RadioGroup
                    android:id="@+id/radio_group_carry_forward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/thirty_six_dp"
                    android:layout_marginEnd="@dimen/thirty_six_dp"
                    android:layout_marginTop="@dimen/eight_dp"
                    android:checkedButton="@+id/radioYes"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/carry_forward_tv">
                    <RadioButton
                        android:id="@+id/radioYes"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/four_dp"
                        android:text="@string/yes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_sp" />
                    <RadioButton
                        android:id="@+id/radioNo"
                        style="@style/AppFont"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/four_dp"
                        android:text="@string/no"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sixteen_sp" />
                </RadioGroup>

                <Button
                    android:id="@+id/add_plan"
                    style="@style/AppFont"
                    android:layout_width="@dimen/two_hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:layout_marginBottom="@dimen/twenty_four_dp"
                    android:background="@drawable/round_button"
                    android:text="@string/add_plan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radio_group_carry_forward" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </FrameLayout>

    <include layout="@layout/toolbar" />
</androidx.constraintlayout.widget.ConstraintLayout>