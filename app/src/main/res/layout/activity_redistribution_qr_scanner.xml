<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/toolbar_include"
        layout="@layout/main_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_include"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingTop="12dp">

            <!-- "You've arrived at" text -->
            <TextView
                android:id="@+id/tv_arrival_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You've arrived at"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginBottom="4dp" />

            <!-- Station Name and Type Button Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Station Name -->
                <TextView
                    android:id="@+id/tv_station_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VSRC"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <!-- Station Type Button (Pick Up or Drop Off) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_station_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#8B0000">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <ImageView
                            android:id="@+id/iv_station_type_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/directions_bike"
                            android:tint="@android:color/white"
                            android:layout_marginEnd="6dp" />

                        <ImageView
                            android:id="@+id/iv_station_type_arrow"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/down_arrow"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tv_station_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop Off Station"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Cycles Count Card - Full width -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_cycles_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardUseCompatPadding="false"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_cycles_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_cycles_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cycles To Drop Off"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/tv_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code to unlock the bicycle"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="4dp" />

            <!-- Camera Preview Container -->
            <FrameLayout
                android:id="@+id/camera_preview_container"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@android:color/black"
                android:layout_marginBottom="16dp">

                <!-- Camera Preview SurfaceView -->
                <SurfaceView
                    android:id="@+id/surface_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!-- QR Scanner Overlay View -->
                <in.pubbs.pubbsadmin.QRScannerOverlayView
                    android:id="@+id/qr_overlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

