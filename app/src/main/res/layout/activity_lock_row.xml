<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/sixteen_dp"
    android:paddingStart="@dimen/eight_dp"
    android:paddingEnd="@dimen/eight_dp"
    android:paddingBottom="@dimen/sixteen_dp"
    android:background="@color/white"
    android:layout_margin="@dimen/eight_dp"
    android:elevation="@dimen/ten_dp">
    <ImageView
        android:id="@+id/img_lock"
        android:layout_width="@dimen/thirty_two_dp"
        android:layout_height="@dimen/thirty_two_dp"
        app:layout_constraintTop_toTopOf="@id/lock_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/sixteen_dp"
        app:layout_constraintEnd_toStartOf="@+id/lock_id"
        android:src="@drawable/ic_lock_black"
        android:contentDescription="@string/lock_icon"/>
    <TextView
        android:id="@+id/lock_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_lock"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:textSize="@dimen/sixteen_sp"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/black"
        android:text="Lock ID:"/>
    <TextView
        android:id="@+id/lock_ble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lock_id"
        app:layout_constraintStart_toEndOf="@id/img_lock"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:textSize="@dimen/fourteen_sp"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/grey_600"
        android:text="Ble Address:"/>
    <TextView
        android:id="@+id/lock_sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lock_ble"
        app:layout_constraintStart_toEndOf="@id/img_lock"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:textSize="@dimen/fourteen_sp"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/grey_600"
        android:text="Sim Number:"/>
    <TextView
        android:id="@+id/lock_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lock_sim"
        app:layout_constraintStart_toEndOf="@id/img_lock"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:textSize="@dimen/fourteen_sp"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/grey_600"
        android:text="Battery percentage:"/>
</androidx.constraintlayout.widget.ConstraintLayout>