<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/twenty_four_dp">

            <Button
                android:id="@+id/done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/twenty_four_dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/comfortaa_regular"
                android:paddingHorizontal="@dimen/sixty_four_dp"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/eight_dp"
                android:text="Change Password"
                android:textColor="@color/blue_300"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view" />

            <TextView
                android:id="@+id/about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/eight_dp"
                android:text="About Us"
                android:textColor="@color/blue_300"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/change_password" />

            <TextView
                android:id="@+id/faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/eight_dp"
                android:text="FAQs"
                android:textColor="@color/blue_300"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_us" />

            <TextView
                android:id="@+id/bank_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/sixteen_dp"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/eight_dp"
                android:text="Bank Details"
                android:textColor="@color/blue_300"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/faq" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:background="@color/white"
                app:cardElevation="@dimen/ten_dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/twenty_four_dp">

                    <ImageView
                        android:id="@+id/edit_button"
                        android:layout_width="@dimen/thirty_six_dp"
                        android:layout_height="@dimen/thirty_six_dp"
                        android:elevation="@dimen/two_dp"
                        android:padding="@dimen/eight_dp"
                        android:src="@drawable/ic_edit"
                        app:layout_constraintBottom_toBottomOf="@id/name_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/name_tv"
                        android:contentDescription="@string/edit"/>

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/organisation_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Organisation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/name_tv" />

                    <TextView
                        android:id="@+id/designation_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Designation"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/organisation_name" />

                    <TextView
                        android:id="@+id/mobile_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/designation_tv" />

                    <TextView
                        android:id="@+id/email_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/mobile_tv" />

                    <TextView
                        android:id="@+id/area_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/twenty_four_dp"
                        android:background="@drawable/text_field_background"
                        android:fontFamily="@font/comfortaa_regular"
                        android:padding="@dimen/sixteen_dp"
                        android:text="Area"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/email_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <include layout="@layout/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>