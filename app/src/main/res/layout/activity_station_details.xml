<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".StationDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

        <FrameLayout
            android:id="@+id/add_area_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/station_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingBottom="@dimen/thirty_six_dp">

                <Button
                    android:id="@+id/done_button"
                    style="@style/AppFont"
                    android:layout_width="@dimen/two_hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/thirty_six_dp"
                    android:background="@drawable/round_button"
                    android:text="@string/done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sixteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/station_details" />


                <ImageView
                    android:id="@+id/station"
                    android:layout_width="@dimen/thirty_six_dp"
                    android:layout_height="@dimen/thirty_six_dp"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:layout_marginTop="@dimen/one_hundred_dp"
                    android:layout_marginEnd="@dimen/twenty_four_dp"
                    android:contentDescription="@string/station"
                    android:src="@drawable/pin_station"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/station_type"
                    style="@style/AppFont"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_two_dp"
                    android:layout_marginLeft="@dimen/thirty_six_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/thirty_six_dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/station_type"
                    android:padding="@dimen/four_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/station_name" />

                <TextView
                    android:id="@+id/area_name"
                    style="@style/AppFont"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/thirty_two_dp"
                    android:layout_marginLeft="@dimen/thirty_six_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/thirty_six_dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/area_name"
                    android:padding="@dimen/four_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/station_type" />

                <TextView
                    android:id="@+id/station_name"
                    style="@style/AppFont"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty_two_dp"
                    android:layout_marginLeft="@dimen/thirty_six_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:layout_marginRight="@dimen/thirty_six_dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/station_name"
                    android:padding="@dimen/four_dp"
                    android:paddingLeft="@dimen/ten_dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@color/colorAccent"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/station" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/station_details"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/thirty_six_dp"
                    android:layout_marginTop="@dimen/twenty_four_dp"
                    android:layout_marginEnd="@dimen/thirty_six_dp"
                    app:cardCornerRadius="@dimen/four_dp"
                    app:cardElevation="@dimen/eight_dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/area_name">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <fragment
                            android:id="@+id/map"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </ScrollView>

    <include layout="@layout/toolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>