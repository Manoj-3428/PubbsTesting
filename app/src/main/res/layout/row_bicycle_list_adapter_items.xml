<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/eight_dp"
    android:paddingTop="@dimen/eight_dp"
    android:id="@+id/container">

    <View
        android:id="@id/status"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_bike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_bike"
        app:layout_constraintVertical_bias="0.628" />

    <ImageView
        android:id="@+id/iv_bike"
        android:layout_width="@dimen/fifty_dp"
        android:layout_height="@dimen/fifty_dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/bicycle_icon"
        android:src="@drawable/bike"
        app:layout_constraintStart_toEndOf="@+id/status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lock_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Lock Id"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/iv_bike"
        app:layout_constraintTop_toTopOf="@id/iv_bike"
        android:layout_marginStart="@dimen/eight_dp" />

    <TextView
        android:id="@+id/battery_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lock_id"
        app:layout_constraintStart_toEndOf="@id/iv_bike"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_id"
        android:layout_marginStart="@dimen/eight_dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:fontFamily="@font/comfortaa_regular"
        android:text="Battery:"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <!--<TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lock_id"
        android:layout_toRightOf="@id/battery_value"
        android:layout_alignBaseline="@id/battery_value"
        android:layout_marginLeft="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/five_dp"
        android:text="Status"
        android:fontFamily="@font/comfortaa_regular"
        android:textColor="@color/black"
        android:textSize="12sp"/>
-->
    <TextView
        android:id="@+id/battery_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa_regular"
        android:text="60%"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/battery_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_lock_id"
        android:layout_marginTop="@dimen/twelve_dp"
        android:layout_marginStart="@dimen/eight_dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/twelve_dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/battery_hint"/>

</androidx.constraintlayout.widget.ConstraintLayout>