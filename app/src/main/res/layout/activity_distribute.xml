<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="#F5F5F5"
    tools:context=".Distribute">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle Management"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_marginBottom="20dp" />

    <!-- QR Scan Button -->
    <Button
        android:id="@+id/btnScanQR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Scan QR Code"
        android:textSize="18sp"
        android:padding="12dp"
        android:background="@drawable/btn_green"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp" />

    <!-- Cycle Details -->
    <TextView
        android:id="@+id/tvCycleDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cycle details will appear here"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="@drawable/details_box"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Unlock and Return Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">

        <Button
            android:id="@+id/btnUnlock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”“ Unlock"
            android:textSize="16sp"
            android:background="@drawable/btn_blue"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”’ Return"
            android:textSize="16sp"
            android:background="@drawable/btn_orange"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>
