<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                android:layout_marginBottom="@dimen/twenty_four_dp"
                android:paddingHorizontal="@dimen/sixty_four_dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/comfortaa_regular"
                android:textAllCaps="false"
                android:text="Reply"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reply_message"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/reply_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred_dp"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:background="@drawable/text_field_border"
                android:fontFamily="@font/comfortaa_regular"
                android:gravity="top"
                android:inputType="textLongMessage"
                android:padding="@dimen/sixteen_dp"
                android:text="REPLY MESSAGE"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintTop_toBottomOf="@id/user_message"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/user_message"
                android:layout_width="match_parent"
                android:layout_height="@dimen/two_hundred_dp"
                android:layout_marginStart="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/thirty_two_dp"
                android:layout_marginEnd="@dimen/twenty_four_dp"
                android:background="@drawable/text_field_border"
                android:fontFamily="@font/comfortaa_regular"
                android:padding="@dimen/sixteen_dp"
                android:text="USER MESSAGE"
                android:textColor="@color/black"
                android:textSize="@dimen/fourteen_sp"
                app:layout_constraintTop_toBottomOf="@id/card_view" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/twenty_four_dp"
                android:layout_marginTop="@dimen/twenty_four_dp"
                app:cardElevation="@dimen/ten_dp"
                app:layout_constraintTop_toBottomOf="@+id/header_info">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/eight_dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/reply_to_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/eight_dp"
                        android:layout_marginTop="@dimen/eight_dp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="Reply to:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/date_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/eight_dp"
                        android:layout_marginTop="@dimen/sixteen_dp"
                        android:layout_marginBottom="@dimen/eight_dp"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="Date and Time:"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/reply_to_tv" />

                    <TextView
                        android:id="@+id/email_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="Email"
                        android:textColor="@color/blue_500"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintBottom_toBottomOf="@id/reply_to_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/reply_to_tv"
                        app:layout_constraintTop_toTopOf="@+id/reply_to_tv" />

                    <TextView
                        android:id="@+id/date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa_regular"
                        android:text="Date Time"
                        android:textColor="@color/blue_500"
                        android:textSize="@dimen/fourteen_sp"
                        app:layout_constraintBottom_toBottomOf="@id/date_time_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/reply_to_tv"
                        app:layout_constraintTop_toTopOf="@+id/date_time_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/twenty_four_dp"
                android:paddingTop="@dimen/twenty_four_dp"
                app:layout_constraintTop_toBottomOf="@+id/toolbar_layout">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:src="@drawable/ic_mail_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/letter_icon"/>

                <TextView
                    android:id="@+id/reply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:padding="@dimen/four_dp"
                    android:text="@string/reply"
                    android:textColor="@color/blue_500"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintBottom_toBottomOf="@id/user_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/user_text" />

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/twenty_four_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:padding="@dimen/two_dp"
                    android:text="User ID :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fourteen_sp"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/two_dp"
                    android:layout_marginBottom="@dimen/twelve_dp"
                    android:fontFamily="@font/comfortaa_regular"
                    android:padding="@dimen/one_dp"
                    android:text="to me"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/user_id"
                    app:layout_constraintTop_toBottomOf="@id/user_id" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/one_dp"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <include layout="@layout/toolbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>